<form action="/{{this._id}}/edit" method="post">
  <select name="category">
    <option value="Event">Event</option>
    <option value="Culture">Culture</option>
    <option value="Sports">Sports</option>
    <option value="Food">Food</option>
  </select>
  <input class="form-control" name='shortdescr' type='text' placeholder="Title" value="{{this.shortdescr}}">
  <br>
  <textarea class="form-control" name="longdescr" cols="30" rows="10" placeholder="Detailed description" ">{{this.longdescr}}</textarea>
  <br>
  <input class="form-control " name='location' type='text' placeholder="Where? " value="{{this.location}} ">
  <br>
  <input class="form-control " name='date' type='text' placeholder="When? " value="{{this.date}} ">
  <br>
  <input class="form-control " name='image' type='text' placeholder="Image link (optional) " value="{{this.image}} ">
  <br>
  <button>Submit</button>
</form>