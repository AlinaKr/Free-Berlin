<div class="container w-50">
  <h2>Login</h2>

  <form action="/auth/login" method="POST" id="form-container">
    <div class="form-group">
      <label for="username">Username</label>
      <input class="form-control" id="username" type="text" name="username" placeholder="JonSnow">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input class="form-control" id="password" type="password" name="password" placeholder="Your password">
    </div>
    <div class="form-footer">
      <div class="err-msg">
        {{#if message }}
          <div class="error-message">{{ message }}</div>
        {{/if}}
      </div>

      <button class="btn-block">Login</button>

      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">Signup</a>
      </p>
    </div>
  </form>
</div>
