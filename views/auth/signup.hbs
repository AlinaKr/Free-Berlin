<!-- views/auth/signup.hbs -->
<div class="container container-shadow w-50">
  <h2>Signup</h2>

  <form action="/auth/signup" method="POST" id="form-container">
    <div class="form-group">
      <label for="username">Username</label>
      <input class="form-control" id="username" type="text" name="username" placeholder="JonSnow">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input class="form-control" id="password" type="password" name="password" placeholder="Your password">
    </div>
    <div class="form-footer">
      <div class="err-msg">
        {{#if message }}
        <div class="error-message">{{ message }}</div>
        {{/if}}
      </div>

      <button class="btn-block">Create account</button>

      <p class="account-message">
        Do you already have an account?
        <a href="/auth/login">Login</a>
      </p>
    </div>
  </form>
</div>