<form action="/{{this._id}}/favorize" method="post">
  <div>
    <img src="/images/free-icon.png" style="height:50px" alt="default img">
    <h3> {{this.category}} </h3>
    <h5> {{this.shortdescr}} </h5>
    <p> {{this.longdescr}} </p>
    <p> {{this.location}} </p>
    <p> {{this.date}} </p>
    <button>Favorize</button>
    <a href="favorize">Favorizelink</a>
  </div>
</form>